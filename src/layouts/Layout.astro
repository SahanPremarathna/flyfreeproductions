const base = import.meta.env.BASE_URL;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>Home Page</title>
    
    <!-- <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet"> -->
    
    <link rel="preload" as="image" href={`${base}images/bg3-tall.jpg`} />

    


  </head>

  <body>
    <header>
      <img id="logo" src={`${base}images/white-logo.png`} alt="logo" />
      <nav>
        <a href="/">Home</a>
        <a href="/about">About Us</a>
        <a href="/bts">Our Explorations</a>
        <a href="#">Equipments</a>
        <a href="/temp">Gallery</a>
      </nav>
    </header>

    <slot />
  </body>
</html>


<style>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    width: 100%;
    background-color: chocolate;
    background-image: url("/images/bg3.webp");
    background-repeat: no-repeat;
    background-size: cover;
    background-attachment: fixed;
    background-position: top;
    font-family: Arial, sans-serif;
    overflow-x: hidden;
  }
  @media (max-width: 768px) {
  body {
    background-image: url("/images/bg1-tall.webp");
    background-position: center top;
    overscroll-behavior: none;
    background-attachment: fixed;
  }
}

  header {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    /* align-items: center; */
    padding: 1rem;
    width: 100%;
    gap: 1rem;
  }

  #logo {
    height: 150px;
    max-width: 100%;
  }

  nav {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
    justify-content: center;
    margin-top: 10px;
    height: 50%;
    
  }

  nav a {
    background-color: rgba(20, 212, 68, 0.5);
    text-decoration: none;
    color: #ffffff;
    border-radius: 10px;
    padding: 8px 20px;
    font-size: 1.5rem;
    /* margin-top: -50px; */
    transition: all 0.3s ease-in-out;
  }

  nav a:hover {
    transform: scale(1.1);
    background-color: rgba(20, 212, 68, 0.7);
  }

  /* ðŸ‘‡ Responsive tweaks for mobile */
  @media (max-width: 768px) {
    header {
      flex-direction: column;
      align-items: center;
    }

    nav {
      flex-direction: column;
      align-items: center;
    }

    nav a {
      width: 100%;
      text-align: center;
      padding: 12px;
      font-size: 1.1rem;
    }

    #logo {
      height: 60px;
    }
  }
</style>
