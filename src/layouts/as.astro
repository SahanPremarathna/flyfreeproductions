---
const base = import.meta.env.BASE_URL;
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ?? "FlyFreeProductions"}</title>
    <link rel="stylesheet" href="/style/as.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Quicksand:ital,wght@0,400;0,500;0,600;0,700;1,500&display=swap"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    />
  </head>

  <body id="bg">
    <div id="bg-fader-1" class="bg-fader"></div>
    <div id="bg-fader-2" class="bg-fader"></div>

    <div class="content">
      <header id="nav-header">
        <a href="/" id="logo-contaiiner"><img src="/images/black-logo.png" alt="flyfree-logo" id="header-logo" /></a>
        <input type="checkbox" id="menu-toggle" />
        <label for="menu-toggle" class="menu-icon">&#9776;</label>

        <div class="mobile-menu">
          <nav>
            <a href="/">Home</a>
            <a href="/explore/">Our Explorations</a>
            <a href="/blog">Blog</a>
            <a href="/camera-gear">Our Gear</a>
            <a href="/about">About Us</a>
            <a href="/letusknow">Let us know</a>

          </nav>
        </div>

        <nav class="desktop-nav">
          <a href="/">Home</a>
          <a href="/explore/">Our Explorations</a>
          <a href="/blog">Blog</a>
          <a href="/camera-gear">Our Gear</a>
          <a href="/about">About Us</a>
          <!-- <a href="/temp">Gallery</a> -->
        </nav>

        <div class="head-let-us-know">
          <span>Rare Sightings?</span>
          <a href="/letusknow">Let us know</a>
        </div>
      </header>

      <slot />

      <footer class="flyfree-footer">
        <div class="footer-container">
          <!-- Brand & Tagline -->
          <div class="footer-brand">
            <h2>FlyFree</h2>
            <p>Exploring the wild, one frame at a time.</p>
          </div>

          <!-- Quick Links -->
          <div class="footer-links">
            <h4>Quick Links</h4>
            <ul>
              <li><a href="/">Home</a></li>
              <li><a href="/about">About FlyFree</a></li>
              <li><a href="/blog">Tips & Blog</a></li>
              <li><a href="/gallery">Gallery</a></li>
              <li><a href="/contact">Contact</a></li>
            </ul>
          </div>

          <!-- Social Media -->
          <div class="footer-social">
            <h4>Follow Us</h4>
            <div class="social-icons">
              <a href="#" aria-label="YouTube"
                ><img src="/icons/youtube.svg" alt="YouTube" /></a
              >
              <a href="#" aria-label="Instagram"
                ><img src="/icons/instagram.svg" alt="Instagram" /></a
              >
              <a href="#" aria-label="TikTok"
                ><img src="/icons/tiktok.svg" alt="TikTok" /></a
              >
            </div>
          </div>
        </div>

        <!-- Bottom Row -->
        <div class="footer-bottom">
          <p>Â© 2025 FlyFree. All rights reserved.</p>
        </div>
      </footer>
    </div>

    <script src="/scripts/layout/as.js" is:inline></script>
  </body>
</html>
