<style>

    body{
        background: white;
    }


    .content{
        display: flex;
        flex-direction: column;
        /* align-items: center; */
        /* justify-content: center; */
    }

    .image-panel {
        position: relative;
        margin-top: -100px;
        width: 100%;
        height: 75%;
        overflow: hidden;
    }

    .image-panel img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .heading-switch {
        position: absolute;
        width: 60%;
        top: 50%;
        left: 70%;
        transform: translate(-50%, -50%);
        font-size: clamp(3em, 5vw, 6em);
        font-weight: 700;
        text-align: center;
        color: white;
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.6);
        opacity: 0;
        transition: opacity 1s ease-in-out;
        pointer-events: none;
    }

    

    @media (max-width: 768px){
        .content{
            background-color: transparent;
            justify-items: center;
            align-items: center;
        }

        body{
            background-image: url("/images/explore/sl-yala-tall.webp");
            background-size: cover;
            background-position: center top;
            overscroll-behavior: none;
            background-attachment: fixed;
        }

        .image-panel{
            margin-top: 0%;
            height: 30%;
        }

        .image-panel img {
            display: none;
        }

        .heading-switch {
            width: 100%;
            left: 50%;
            padding: 10px;
            font-size: 4em;
        }
    }

    /* styles for the content inside the content div class */

    .img-br-line{
        height: 5px;
        width: 100%;
        /* position: absolute; */
        margin-top: 10px;
        background-color: #1B1205;
    }

    .infopanel1{
        display: flex;
    }

    .subinfopanel1{
        width: 40%;
        display: flex;
        flex-direction: column;
        padding: 10px;

    }
    

    .latest-exp{
        display: flex;
        flex-direction: column;
        width: 100%;
        margin-bottom: 30px;

    }

    .latest-exp h2{
        width: 100%;
        /* font-size: 2em; */
        margin-top: 10px;
        margin-bottom: 20px;
    }

    .latest-exp p{
        width: 100%;
        font-size: 1em;

        margin-top: 10px;
        margin-bottom: 20px;
    }

    .ongoing-exp{
        display: flex;
        flex-direction: column;
        width: 100%;
        margin-bottom: 30px;

    }

    .ongoing-exp h2{
        margin-top: 10px;
        /* font-size: 2em; */

        margin-bottom: 20px;
    }

    .ongoing-exp p{
        width: 100%;
        font-size: 1em;


        margin-top: 10px;
        margin-bottom: 20px;
    }

    .map-content{
        display: flex;
        flex-direction: column;
        background-color: #ecdecd;
        border-top-left-radius: 15px;
        border-bottom-left-radius: 15px;

        backdrop-filter: blur(10px);
        padding: 10px;
        width: 60%;
        margin-top: 10px;
    }

    .map-content h2{
        /* font-size: 2em; */
        font-weight: 700;
        /* margin: 20px; */
        margin-top: 10px;
        margin-bottom: 20px;
    }

    #map{
        align-self: center;
        height: 600px; 
        width: 95%; 
        border-radius: 12px; 
        margin-bottom: 2rem;
    }

    




    /* mobile styles for the content that are inside the div class */
    @media (max-width: 768px){
        .img-br-line{
            display: none;
        }
        

    }

</style>


<script type="module" src="/src/scripts/map.js"></script>

<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const headings = Array.from(document.querySelectorAll('.heading-switch'));
        let current = 0;

        function showHeading(index: number) {
            headings.forEach((el, i) => {
                if (el instanceof HTMLElement) {
                    el.style.opacity = i === index ? '1' : '0';
                }
            });
        }

        showHeading(current);

        setInterval(() => {
            const currentEl = headings[current];
            if (currentEl instanceof HTMLElement) {
                currentEl.style.opacity = '0';
            }

            setTimeout(() => {
                current = (current + 1) % headings.length;
                showHeading(current);
            }, 750);
        }, 4500);
    });

</script>
