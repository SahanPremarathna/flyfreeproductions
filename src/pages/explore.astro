import Layout from '../layouts/pageLayout.astro';
---

<Layout>
    <div class="image-panel">
    <img src="/images/explore/sl-yala.webp" alt="sl-yala-lpd-img">
    <h1 class="heading-switch">EXPLORE THE UNSEEN</h1>
    <h1 class="heading-switch"> UNFOLD THE STORY</h2>

</div>

    <div class="content">
        



    </div>
</Layout>

<style>

    body{
        background: white;
    }


    .content{
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .image-panel {
        position: relative;
        margin-top: -100px;
        width: 100%;
        height: 75%;
        overflow: hidden;
    }

    .image-panel img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .heading-switch {
        position: absolute;
        width: 60%;
        top: 50%;
        left: 70%;
        transform: translate(-50%, -50%);
        font-size: clamp(3em, 5vw, 6em);
        font-weight: 700;
        text-align: center;
        color: white;
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.6);
        opacity: 0;
        transition: opacity 1s ease-in-out;
        pointer-events: none;
    }

    @media (max-width: 768px){
        .content{
            background-color: transparent;
            justify-items: center;
        }

        body{
            background-image: url("/images/explore/sl-yala-tall.webp");
            background-size: cover;
            background-position: center top;
            overscroll-behavior: none;
            background-attachment: fixed;
        }

        .image-panel{
            margin-top: 0%;
            height: 30%;
        }

        .image-panel img {
            display: none;
        }

        .heading-switch {
            width: 100%;
            left: 50%;
            font-size: 3em;
        }
    }

    /* styles for the content inside the content div class */




    /* mobile styles for the content that are inside the div class */
    @media (max-width: 768px){

    }

</style>




<script>
    document.addEventListener('DOMContentLoaded', () => {
        const headings = Array.from(document.querySelectorAll('.heading-switch'));
        let current = 0;

        function showHeading(index: number) {
            headings.forEach((el, i) => {
                if (el instanceof HTMLElement) {
                    el.style.opacity = i === index ? '1' : '0';
                }
            });
        }

        showHeading(current);

        setInterval(() => {
            const currentEl = headings[current];
            if (currentEl instanceof HTMLElement) {
                currentEl.style.opacity = '0';
            }

            setTimeout(() => {
                current = (current + 1) % headings.length;
                showHeading(current);
            }, 750);
        }, 4500);
    });
</script>
